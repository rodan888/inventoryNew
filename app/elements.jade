doctype html
html.no-js(lang="ru")
	include templates/structure/head
	body
		include templates/structure/header
		main
			div.container
				div.row
					div.col-md-12
						section.tabs
							ul 
								each val,ind in ['form','image','slider','popup','over']
									if(ind== 0)
										li.tab-link.active(data-show=val)=val
									else
										li.tab-link(data-show=val)=val
							div.tabs-wrap
								div#form.tab
									div.tab-content
										h1.title.center.mt4 Forms example								
										form(action="#")
											div.container-fluid
												div.row
													div.col-md-6.clrp
														div.form-group
															input(type="checkbox", name="fancy-checkbox" id="fancy-checkbox")
															label(for="fancy-checkbox") Checkbox
														div.form-group
															input(type="radio", name="fancy-radio", id="radio-1", checked)
															label(for="radio-1") Radio
															input(type="radio", name="fancy-radio", id="radio-2")
															label(for="radio-2") Radio
													div.col-md-6.clrp.right
														div.form-group
															select(name="lengvich1", id="lengvich1")
																each val,ind in ['Select lengvich','JavaScript','CSS','HTML','PHP','C#','Java','C++','Ruby']
																	option(value=ind)=val
															label(for="lengvich1")
																i.fa.fa-angle-down
														div.form-group
															select(name="lengvich", id="lengvich2")
																each val,ind in ['Select lengvich','JavaScript','CSS','HTML','PHP','C#','Java','C++','Ruby']
																	option(value=ind)=val
															label(for="lengvich2")
																i.fa.fa-angle-down
													div.col-md-6
														div.form-group
															input(
																data-addui='slider',
																data-step='1',
																data-id='range',
																data-min='1',
																data-max='100',
																value='20')
