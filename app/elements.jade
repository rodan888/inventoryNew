								div#over.tab
									div.tab-content.center
										h3.title.center.mt4 Over DOM element
										div.container-fluid
											div.col-md-3.block
												h3.subtitle.mt2 Burger menu
												div.mob-button.mt4
													span
													span
													span
											div.col-md-3.block
												h3.subtitle.mt2.mb0 Gif preloader
												div.preloader-wrap
													div.preloader.gif
