															input(
																data-addui='slider',
																data-min='-20',
																data-step='0.1',
																data-max='20', 
																value='0')
													div.col-md-6
														div.form-group
															input(
																data-addui='slider',
																data-min='-5',
																data-max='5',
																data-range='true',
																value='-2,2')
													div.col-md-6
														div.container-fluid
															div.row
																div.col-md-6.clrp
																	div.form-group
																		input(
																			data-addui='slider',
																			data-direction='vertical')
																div.col-md-6
																	div.form-group
																		input(
																			data-addui='slider',
																			data-direction='vertical',
																			data-range='true',
																			data-min='20',
																			data-max='40',
																			data-step='1',
																			value='25,35')
											div.form-group
												input(type="text", name="fancy-text", id="fancy-text")
												label(for="fancy-text") Name
											div.form-group
												input(type="text", name="fancy-email", id="fancy-email", required)
												label(for="fancy-email") E-mail
											div.form-group
												textarea(name="fancy-textarea" id="fancy-textarea")
												label(for="fancy-textarea") Description
											button(type="submit" class="btn mb2") Submit
											button(type="submit" class="btn grey mb2") Submit
											button(type="submit" class="btn small mb2") Submit
											button(type="submit" class="btn full mb2") Submit
											input(type="hidden", name="project_name", value="Имя сайта")
											input(type="hidden", name="admin_email", value="tsumbaluk888@gmail.com")
											input(type="hidden", name="form_subject", value="Заявка с имя сайта")
								div#image.tab
									div.tab-content
										h1.title.center.mt4 Image card example
										div.container-fluid
											- var n = 0
											- var i = 0
											while n < 4
												div.col-md-3.clrp
													div.card
														div.img-wrap.small
															img(src="img/seampl"+ n++ +".jpg" alt="foto")
